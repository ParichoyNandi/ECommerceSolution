                            </div>
                            <input type="text" asp-for="@Model.LoginID" class="form-control" placeholder="Username">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group login-button" style="display:flex;justify-content:center;">
                            <input type="submit" name="btn" value="Login" class="btn btn-outline-danger float-right login_btn">
